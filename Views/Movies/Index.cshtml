@model IEnumerable<WebAppMovieTop.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<h1 class="styled-title">Movies</h1>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="movie-card fade-in-up card mb-4 shadow-sm">
                    @if (!string.IsNullOrEmpty(item.PosterPath))
                    {
                        <img class="movie-poster card-img-top" src="@Url.Content(item.PosterPath)" alt="@item.Title" style="width: 100%; height: auto;" />
                      
                       
                    }
                    <div class="movie-info card-body">
                        <h2 class="movie-title card-title">@item.Title</h2>
                        <p class="card-text"><strong>Director:</strong> @item.Director</p>
                        <p class="card-text"><strong>Genre:</strong> @item.Genre</p>
                        <p class="card-text"><strong>Year:</strong> @item.Year</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Edit", "Movies", new { id = item.Id })">Edit</a>
                                <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Details", "Movies", new { id = item.Id })">Details</a>
                                <a class="btn btn-sm btn-outline-danger" href="@Url.Action("Delete", "Movies", new { id = item.Id })">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>